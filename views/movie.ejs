<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>映画データ一覧</title>
</head>
<body>
  <h1>映画データ一覧</h1>
  <table>
    <tr><th>ID</th><th>作品コード</th><th>タイトル</th><th>ジャンル</th><th>操作</th></tr>
      <% let number = 0; %>
      <% for (let row of data) { %>
          <tr>
            <td><%= number + 1 %></td>
            <td><%= row.code %></td>
            <td><a href="/movie/<%= number %>"><%= row.title %></a></td>
            <td><%= row.genre %></td>
            <td><a href="/movie/delete/<%= number %>" onclick="return confirm">削除</a></td>
          </tr>
        <% number += 1; %>
      <% } %>
  </table>
  <a href="/movie/create">追加</a>
</body>
</html>
